<div id="add-form-container" class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Fill in the form to post the job</h1>
    </div>
    <div id="form-box" class="col-md-12">
      <h2>Fill in the best way to find your ideal professional as quickly as
        possible!</h2>
      <form>
        <div class="form-group">
          <label for="title">Job Title:</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="Write the job title here"
            required
          />
          <small id="titleHelp" class="form-text text-muted">The title is very
            important, be objective.</small>
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea
            type="text"
            class="form-control"
            id="description"
            name="description"
            placeholder="Description about the job"
            required
          ></textarea>
        </div>
        <div class="form-group">
          <label for="company">Company:</label>
          <input
            type="text"
            class="form-control"
            id="company"
            name="company"
            placeholder="Company Name"
            required
          />
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Company Email"
            required
          />
        </div>
        <div class="form-group">
          <label for="salary">Salary:</label>
          <input
            type="text"
            class="form-control"
            id="salary"
            name="salary"
            placeholder="Salary"
            required
          />
        </div>
        <input type="hidden" value="1" name="new_job" />
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>